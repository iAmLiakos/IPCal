             BarTextColor="WhiteSmoke"-->
    <!--Pages can be added as references or inline-->
    <ContentPage Title="Γενική Λίστα" BackgroundColor="WhiteSmoke">
        <ContentPage.ToolbarItems>
            <ToolbarItem Text="Ενημέρωση μέσω email" Icon="mailsend64.png" Command="{Binding SendEmailButton}"/>
        </ContentPage.ToolbarItems>
        <StackLayout>
            <ActivityIndicator IsRunning="{Binding isBusy}" IsVisible="{Binding isBusy}" Color="Black"/>
            <SearchBar TextChanged="SearchBar_TextChanged" Placeholder="Γράψε τη διεύθυνση ή το όνομα που ψάχνεις..."></SearchBar>
            <Label Text="Αυτή η σελίδα περιέχει όλες τις ημερομηνίες καθαρισμού. Απο εδώ μπορείς να τις δείς, να τις επεξεργαστείς ή να τις διαγράψεις." TextColor="LightGray" HorizontalOptions="Center"/>
            <ListView x:Name="SearchPageRantezvousGrid" ItemsSource="{Binding RantezvousData}" SelectedItem="{Binding ItemSelected}" SeparatorColor="Black" SeparatorVisibility="Default">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell x:Name="ItemGrid">
                            <Grid Padding="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--1st Column-->
                                <StackLayout HorizontalOptions="Start" Grid.Column="0" Grid.Row="0">
                                    <Label Text="Κωδικός:" FontSize="Micro"/>
                                </StackLayout>
                                <StackLayout HorizontalOptions="Start" Grid.Column="0" Grid.Row="1">
                                    <Label Text="Όνομα:" FontSize="Micro"/>
                                </StackLayout>
                                <StackLayout HorizontalOptions="Start" Grid.Column="0" Grid.Row="2">
                                    <Label Text="Διεύθυνση:" FontSize="Micro"/>
                                </StackLayout>
                                <StackLayout Spacing="15" HorizontalOptions="Start" Grid.Column="0" Grid.Row="3">
                                    <Label Text="Περιοχή:" FontSize="Micro"/>
                                    <BoxView  HeightRequest="2" BackgroundColor="Gray" WidthRequest="100"/>
                                </StackLayout>


                                <!--2nd Column-->
                                <StackLayout HorizontalOptions="Start" Grid.Column="1" Grid.Row="0">
                                    <Label Text="{Binding Id}" Font="Micro"/>
                                </StackLayout>
                                <StackLayout HorizontalOptions="Start" Grid.Column="1" Grid.Row="1">
                                    <Label Text="{Binding CustomerName}" Font="Bold,Micro"/>
                                </StackLayout>
                                <StackLayout HorizontalOptions="Start" Grid.Column="1" Grid.Row="2">
                                    <Label Text="{Binding CustomerAddress}" Font="Bold,Micro"/>
                                </StackLayout>
                                <StackLayout Spacing="15" HorizontalOptions="Start" Grid.Column="1" Grid.Row="3">
                                    <Label Text="{Binding AreaName}" Font="Micro"/>
                                    <BoxView  HeightRequest="2" BackgroundColor="Gray" WidthRequest="100"/>
                                </StackLayout>


                                <!--3rd Column-->
                                <StackLayout HorizontalOptions="Start" Grid.Column="2" Grid.Row="0">
                                    <Label Text="Ημερομηνία" Font="Micro" HorizontalOptions="Center"/>
                                </StackLayout>
                                <StackLayout HorizontalOptions="Start" Grid.Column="2" Grid.Row="1">
                                    <Label Text="{Binding DateTrimmed}" Font="Bold,Micro" HorizontalOptions="Center"/>
                                </StackLayout>
                                <StackLayout HorizontalOptions="Start" Grid.Column="2" Grid.Row="2">
                                    <Label Text="Επόμενη Ημερομηνία" Font="Micro" HorizontalOptions="Center"/>
                                </StackLayout>
                                <StackLayout HorizontalOptions="Start" Grid.Column="2" Grid.Row="3">
                                    <Label Text="{Binding NextDateTrimmed}" Font="Bold,Micro" HorizontalOptions="Center"/>
                                </StackLayout>

                                <!--4th Column-->
                                <StackLayout HorizontalOptions="Start" Grid.Column="3" Grid.Row="1">
                                    <Button WidthRequest="140" HeightRequest="50" BackgroundColor="LightGray" Text="Διαγραφή" BindingContext="{Binding Source={x:Reference SearchPageRantezvousGrid}, Path=BindingContext}"
                                Command="{Binding DeleteOneItemCommand}" CommandParameter="{Binding Source={x:Reference ItemGrid},
                                Path=BindingContext}" Image="deletecalendar.png"/>
                                    <BoxView WidthRequest="120" HeightRequest="1" BackgroundColor="WhiteSmoke" HorizontalOptions="Center"/>
                                </StackLayout>
                                <StackLayout HorizontalOptions="Start" Grid.Column="3" Grid.Row="2">
                                    <BoxView WidthRequest="120" HeightRequest="1" BackgroundColor="WhiteSmoke" HorizontalOptions="Center"/>
                                    <Button WidthRequest="140" HeightRequest="50" BackgroundColor="LightGray" Text="Ενημέρωση" BindingContext="{Binding Source={x:Reference SearchPageRantezvousGrid}, Path=BindingContext}"
                                Command="{Binding UpdateButton}" CommandParameter="{Binding Source={x:Reference ItemGrid},
                                Path=BindingContext}" Image="updatecalendar.png"/>
                                </StackLayout>

                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Διαγραφή όλων" Image="deleteall.png" FontSize="20" BackgroundColor="Black" TextColor="Red" Command="{Binding DeleteAllButtonCommand}" HorizontalOptions="End"/>
            <!--<StackLayout Orientation="Horizontal">
                -->
            <!--<Button Text="Update Selected" Command="{Binding UpdateButton}" BackgroundColor="Gray" HorizontalOptions="StartAndExpand"/>
                <BoxView WidthRequest="50" HeightRequest="1" BackgroundColor="WhiteSmoke" HorizontalOptions="Center"/>
                <Button Text="Delete Selected" Command="{Binding DeleteOneItemCommand2}" BackgroundColor="Red" HorizontalOptions="EndAndExpand"/>-->
            <!--
            </StackLayout>-->
        </StackLayout>
    </ContentPage>
